{
  "extends": "@tsconfig/node18",
  "compilerOptions": {
    "paths": {
      "@final-ui/app": ["./packages/playground/src"],
      "@final-ui/react": ["./packages/react/src"],
      "@final-ui/ws-client": ["./packages/ws-client/src"],
      "@final-ui/ws-server": ["./packages/ws-server/src"],
      "@final-ui/tamagui": ["./packages/tamagui/src"],
      "@final-ui/kit": ["./packages/kit/src"]
    },
    "composite": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react",
    "strict": true
  },
  "exclude": [
    "**/node_modules",
    "**/__tests__",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/lib"
  ]
}
